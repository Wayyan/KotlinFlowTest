<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OperatorsPartOneActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <Button
            android:id="@+id/btnMapSync"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:textAllCaps="false"
            android:text="Map Sync"/>

        <Button
            android:id="@+id/btnMapSuspend"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:textAllCaps="false"
            android:text="Map Suspend"/>

        <Button
            android:id="@+id/btnFilterSync"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:textAllCaps="false"
            android:text="Filter Sync"/>

        <Button
            android:id="@+id/btnFilterSuspend"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:textAllCaps="false"
            android:text="Filter Suspend"/>

        <Button
            android:id="@+id/btnTake"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:textAllCaps="false"
            android:text="Take"/>

        <Button
            android:id="@+id/btnTakeWhile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:textAllCaps="false"
            android:text="Take While"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>

        <Button
            android:id="@+id/btnToPartTwo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:textAllCaps="false"
            android:text="Next"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>