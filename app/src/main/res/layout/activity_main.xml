<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <Button
            android:id="@+id/btnLaunchFixedFlow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:textAllCaps="false"
            android:text="Launch Fixed Flow"/>

        <Button
            android:id="@+id/btnLaunchCollectionFlow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:textAllCaps="false"
            android:text="Launch Collection Flow"/>

        <Button
            android:id="@+id/btnLaunchLambdaFlow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:textAllCaps="false"
            android:text="Launch Lambda Flow"/>

        <Button
            android:id="@+id/btnLaunchChannelFlow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:textAllCaps="false"
            android:text="Launch Channel Flow"/>

        <Button
            android:id="@+id/btnLaunchFloChain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:textAllCaps="false"
            android:text="Launch Flow Chain"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:text="Next"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>